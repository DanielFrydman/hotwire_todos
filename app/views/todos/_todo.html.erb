<!-- app/views/todos/_todo.html.erb -->
<%= turbo_frame_tag dom_id(todo), class: "flex items-center gap-3 p-3 bg-gray-50 rounded-lg" do %>
  <div class="flex items-center gap-3 flex-1">
    <%= button_to toggle_todo_path(todo), method: :patch, 
        class: "text-2xl #{'text-green-500' if todo.completed} hover:scale-110 transition-transform",
        form: { data: { turbo_method: :patch } } do %>
      <%= todo.completed? ? 'âœ…' : 'â­•' %>
    <% end %>
    
    <span class="<%= 'line-through text-gray-500' if todo.completed %>">
      <%= todo.title %>
    </span>
    
    <small class="text-gray-400">by <%= todo.user_name %></small>
  </div>
  
  <div class="flex gap-2">
    <%= link_to "Edit", edit_todo_path(todo), 
        class: "px-3 py-1 text-sm bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
    <%= button_to "Delete", todo_path(todo), method: :delete,
        confirm: "Are you sure?",
        class: "px-3 py-1 text-sm bg-red-500 text-white rounded hover:bg-red-600" %>
  </div>
<% end %>